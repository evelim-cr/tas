<h1>Search results</h1>
<% unless @posts.empty? %>
<table class="bordered">
  <thead>
    <tr>
      <th>Text</th>
      <th>Frequency</th>
      <th>Author</th>
      <th>Postdate</th>
      <th>Source</th>
      <!--<th>Query</th>-->
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.text %></td>
        <td><%= post.frequency %></td>
        <td><%= post.author %></td>
        <td><%= post.post_date %></td>
        <td><%= post.source.name %></td>
        <td><%= link_to 'view', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  No results found
<% end %>