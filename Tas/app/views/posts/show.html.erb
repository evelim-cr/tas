<div class="row">
  <div class="input-field col s8">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Text:</strong>
      <%= @post.text %>
    </p>

    <p>
      <strong>Frequency:</strong>
      <%= @post.frequency %>
    </p>

    <p>
      <strong>Author:</strong>
      <%= @post.author %>
    </p>

    <p>
      <strong>Postdate:</strong>
      <%= @post.postDate %>
    </p>

    <p>
      <strong>Source:</strong>
      <%= @post.source_id %>
    </p>

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>
</div>